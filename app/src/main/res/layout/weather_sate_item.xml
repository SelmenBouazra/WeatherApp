<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weather_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="21:00"
        android:textColor="@color/grey"
        tools:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/weather_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:srcCompat="@drawable/cloudy"
        app:layout_constraintTop_toBottomOf="@id/weather_time"
        app:layout_constraintStart_toStartOf="@id/weather_time"
        app:layout_constraintEnd_toEndOf="@id/weather_time"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="19Â°C"
        android:textSize="15sp"
        android:textColor="@color/white"
        tools:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/weather_state"
        app:layout_constraintStart_toStartOf="@id/weather_time"
        app:layout_constraintEnd_toEndOf="@id/weather_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>
